<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EdgeTransparentView">
        <attr name="position">
            <flag name="top" value="0x1"/>
            <flag name="bottom" value="0x2"/>
            <flag name="left" value="0x4"/>
            <flag name="right" value="0x8"/>
        </attr>
        <attr name="edge_size" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="TwoWaySeekBar">
        <attr name="thumb" format="reference"/>
        <attr name="progress_color" format="color"/>
        <attr name="background_progress_color" format="color"/>
        <attr name="basepoint_color" format="color"/>
    </declare-styleable>
</resources>